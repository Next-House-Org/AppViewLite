@inject RequestContext RequestContext
@code{
    [Parameter] public BlueskyProfile Profile { get; set; }

}
<button class="follow-button @(Profile.IsFollowedBySelf != null ? "follow-button-unfollow" : null)" actionkind="toggleFollow" data-profiledid="@Profile.Did" data-followrkey="@(Profile.IsFollowedBySelf?.ToString() ?? "-")" data-followsyou="@(Profile.FollowsYou ? 1 : 0)">
    @if (Profile.IsFollowedBySelf != null)
    {
        <text>Unfollow</text>
    }
    else if (Profile.FollowsYou)
    {
        <text>Follow Back</text>
    }
    else 
    {
        <text>Follow</text>
    }
</button>
