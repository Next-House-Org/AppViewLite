@page "/@{did}/followers"

@code {
    [Parameter] public required string Did { get; set; }
    private BlueskyProfile[] Followers = [];
    protected override async Task OnParametersSetAsync()
    {
        Did = (await BlueskyEnrichedApis.Instance.ResolveHandleAsync(Did));
        Followers = await BlueskyEnrichedApis.Instance.EnrichAsync(Program.WithRelationshipsLock(rels => rels.GetFollowers(Did)), EnrichDeadlineToken.Create());
    }
}

<PageTitle>Followers</PageTitle>

<ProfileGraphHeader Did="@Did" Kind="followers" />

<ProfileList Profiles="Followers" />

