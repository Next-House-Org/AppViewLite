@page "/@{username}@{instance}/{*rest}"
@using AppViewLite.PluggableProtocols.ActivityPub
@inject NavigationManager Navigation

@code {
    [Parameter] public required string UserName { get; set; }
    [Parameter] public required string Instance { get; set; }
    [Parameter] public string? Rest { get; set; }
    protected override void OnParametersSet()
    {
        Navigation.NavigateTo("/@" + ActivityPubProtocol.GetDid(new ActivityPubUserId(Instance, UserName)) + Rest);
    }
}
