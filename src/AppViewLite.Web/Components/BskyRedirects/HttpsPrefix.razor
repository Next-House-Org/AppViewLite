@page "/https:/{*rest}"
@* Routes with 2 consecutive slashes are not allowed in aspnet. *@
@inject NavigationManager Navigation
@inject RequestContext RequestContext
@inject BlueskyEnrichedApis Apis

@code {
    [Parameter] public required string Rest { get; set; }
    protected override async Task OnParametersSetAsync()
    {
        Navigation.NavigateTo(await Apis.ResolveUrlToDidOrRedirectAsync(new Uri("https:/" + Rest + new Uri(Navigation.Uri).Query), new Uri(Navigation.BaseUri), RequestContext));
    }
}
